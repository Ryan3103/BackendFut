<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" stylesheets="hello-view.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Barra superior -->
   <Pane fx:id="topBar" prefHeight="60.0" style="-fx-background-color: linear-gradient(to right, #0044cc, #0066ff);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
         <Label layoutX="5.0" layoutY="4.0" prefHeight="53.0" text="Federações Brasileiras" textFill="WHITE">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Label>
      </children>
   </Pane>

   <!-- Conteúdo abaixo da barra superior -->
   <HBox spacing="30.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="100.0">

      <!-- Área de cadastro e busca -->
      <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
         <HBox alignment="CENTER" spacing="20.0">
            <TextField prefHeight="25.0" promptText="Pesquisar federação..." />
            <Button mnemonicParsing="false" text="Buscar federação" />
         </HBox>
         <HBox alignment="CENTER" spacing="10.0">
            <Label text="Não possui cadastro?">
               <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            <Label text="Cadastre-se agora mesmo">
               <font><Font size="18.0" /></font>
            </Label>
         </HBox>
         <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="168.0" text="Cadastre-se" />
      </VBox>

      <!-- Área da tabela -->
      <VBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
         <Label text="Tabela de federações">
            <font><Font size="18.0" /></font>
         </Label>
         <TableView fx:id="tabelaFederacoes" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn prefWidth="134.0" text="Nome da federação" />
               <TableColumn prefWidth="136.0" text="ID da federação" />
               <TableColumn prefWidth="142.0" text="Sigla da federação" />
               <TableColumn prefWidth="163.0" text="Estado federação" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </VBox>

   </HBox>

</AnchorPane>
